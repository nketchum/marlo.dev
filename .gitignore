# Ignore directories generated by Composer
node_modules
drush/contrib
exports
sqlite
vendor
web/core
web/libraries
web/modules/contrib
web/profiles/contrib
web/themes/contrib
web/themes/custom/*/dist

# Do NOT ignore library package.json
!web/libraries/package.json

# Ignore top-level core files
web/*.php

# Ignore Drupal's file directory
web/sites
!web/sites/sites.php

# Ignore meta files
LICENSE
README.md

# Ignore files generated by PhpStorm
.sass-cache
.idea
.sublime-workspace

# Ignore OS hidden files
.DS_Store
Thumbs.db
